@model Coffee_Table.ViewModels.ListGroupViewModel
@{
    ViewBag.Title = "MyGroups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="header_heading--primary-black">MyGroups</h2>

<table id="GroupTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Group name</th>
            <th>Group admin</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<input type="hidden" id="hiddenInput" value="@Model.UserId" />
@section scripts{
    <script>
        $(document).ready(function () {
            var userId = document.getElementById("hiddenInput").value;
            $("#GroupTable").DataTable({
                ajax: {
                    url: "/api/groupusers/" + userId,
                    dataSrc: ""
                }
                ,
                columns : [
                    {
                        data: "name",
                        render: function (data, type, groupuser) {
                            return "<a style='color:black;text-decoration:none' href='/groups/join/" + userId + "/" + groupuser.groupId + "' >" + groupuser.group.name + "</a>";
                        }
                    },
                    {
                        data:"group.applicationUser.name"
                    }
                    ]
            });
        });
    </script>
    
    }
